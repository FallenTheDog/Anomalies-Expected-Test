<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
	<HediffDef>
		<defName>Hediff_AE_Clock</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>Time sync</label>
		<description>The anomalous clock has bound itself to this pawn, affecting them depending on it's own state</description>
		<initialSeverity>0.01</initialSeverity>
		<maxSeverity>4</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>1</severityPerDay>
				<showHoursToRecover>false</showHoursToRecover>
			</li>
			<li Class="HediffCompProperties_DisappearsDisableable">
				<disappearsAfterTicks>241000</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<label>Dawn</label>
			    <capMods>
				  <li>
				    <capacity>Consciousness</capacity>
				    <offset>0.1</offset>
				  </li>
				  <li>
				    <capacity>Moving</capacity>
				    <offset>0.1</offset>
				  </li>
			    </capMods>
				<statOffsets>
					<GlobalLearningFactor>0.35</GlobalLearningFactor>
					<PsychicSensitivity>0.2</PsychicSensitivity>
				</statOffsets>
			</li>
			<li>
				<minSeverity>1</minSeverity>
				<label>Noon</label>
			    <capMods>
				  <li>
				    <capacity>Consciousness</capacity>
				    <offset>0.2</offset>
				  </li>
				  <li>
				    <capacity>Manipulation</capacity>
				    <offset>0.2</offset>
				  </li>
			    </capMods>
			</li>
			<li>
				<minSeverity>2</minSeverity>
				<label>Dusk</label>
			    <capMods>
				  <li>
				    <capacity>Consciousness</capacity>
				    <offset>-0.05</offset>
				  </li>
				  <li>
				    <capacity>Moving</capacity>
				    <offset>-0.1</offset>
				  </li>
			    </capMods>
			</li>
			<li>
				<minSeverity>3</minSeverity>
				<label>Midnight</label>
			    <capMods>
				  <li>
				    <capacity>Consciousness</capacity>
				    <offset>-0.1</offset>
				  </li>
				  <li>
				    <capacity>Moving</capacity>
				    <offset>-0.15</offset>
				  </li>
				  <li>
				    <capacity>Manipulation</capacity>
				    <offset>-0.2</offset>
				  </li>
			    </capMods>
			</li>
			<li>
				<minSeverity>4</minSeverity>
				<label>Next Cycle</label>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>Hediff_AE_ClockSecond</hediff>
					</li>
				</hediffGivers>
		    </li>
		</stages>
	</HediffDef>
	
